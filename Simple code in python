def hieght(start,end,n):
	if(n==1):
		return 1;
	i=(start+end)/2
	if start>end:
		return 0
	if i*(i+1)/2 == n:
		return i
	if i*(i+1)/2 > n:
		return hieght(start,i,n)
	if i*(i+1)/2 < n:
		if (i+2)*(i+1)/2 > n:
			return i
		else:
			return hieght(i,end,n)
t=int(raw_input())
i=1
while i<=t :
	n=int(raw_input())
	x=hieght(0,n,n)
	print x
	i=i+1
